.page{
    padding: 40rpx;
}
.search-result__content{
    padding: 30rpx;
    padding-left: 20rpx;
    margin-bottom: 60rpx;
    border-radius: 20rpx;
    background: #0C4983;
    color: #fff;
    
}
.result-content__intro{
    display: flex;
    justify-content: space-between;
    margin-bottom: 40rpx;
}
.intro__text{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    font-size: 40rpx;
}
image{
    width: 80rpx;
    height: 80rpx;
}
.advice-item{
    position: relative;
    padding-left: 25rpx;
    font-weight: 200;
}
.advice-item::before{
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    content: '';
    width: 8rpx;
    height: 8rpx;
    border-radius: 50%;
    background: #fff;
}
.result--list-title{
    display: inline-block;
    padding: 20rpx;
    background:#0C4983;
    border-radius: 10rpx;
    color: #f5f5f5;
    margin-bottom: 40rpx;
}
.result--list-wrapper{
    display: flex;
    flex-wrap: wrap;
}
.result--list-item{
    height: 40rpx;
    line-height: 40rpx;
    padding: 10rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    border: 1rpx solid #0C4983;
    border-radius: 10rpx;
    color: #0C4983;
}